<!--This script builds a JAR for the CDK -->
<assembly>
  
  <id>cdk-dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>teiid-cdk-${version}</baseDirectory>


  <fileSets>
  
    <fileSet>
      <directory>target/distribution/teiid-${version}-cdk-dependencies.dir</directory>
      <includes>
        <include>teiid-connector-api-${version}.jar</include>
      </includes>
      <outputDirectory>/</outputDirectory>      
    </fileSet>
  
    <fileSet>
      <directory>target/distribution/teiid-${version}-cdk-dependencies.dir</directory>
      <includes>
        <include>*.jar</include>
      </includes>
        <excludes>
          <exclude>teiid-connector-api-*</exclude>
        </excludes>              
      <outputDirectory>lib</outputDirectory>      
    </fileSet>    
    
    <fileSet>
        <directory>build/kit-cdk</directory>
        <outputDirectory>/</outputDirectory>      
        <excludes>
          <exclude>**/*.foo</exclude>
        </excludes>        
    </fileSet>      
  </fileSets>

  
</assembly>