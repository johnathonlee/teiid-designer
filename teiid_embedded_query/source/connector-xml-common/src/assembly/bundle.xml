<!--This script builds a Zip file for the connector and its non-teiid dependencies -->
<assembly>
  
  <id>bundle</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
    
  <fileSets>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>   

</assembly>