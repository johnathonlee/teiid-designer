			</fileset>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/teiid_embedded_query_6.0.0"/>
		<copy file="${build.result.folder}/teiidEmbeddedQuerysrc.zip" todir="${destination.temp.folder}/teiid_embedded_query_6.0.0" failonerror="false" overwrite="false"/>
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}/teiid_embedded_query_6.0.0"/>
		</antcall>
	</target>

	<target name="gather.individual.sources" depends="init">
		<antcall target="copy.teiidEmbeddedQuerysrc.zip">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
	</target>

	<target name="copy.src.includes" depends="init">
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/teiid_embedded_query_6.0.0"/>
		<copy todir="${destination.temp.folder}/teiid_embedded_query_6.0.0" failonerror="false" overwrite="false">
			<fileset dir="${temp.folder}">
				<include name="teiidEmbeddedQuery.jar.bin${logExtension}"/>
			</fileset>
		</copy>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: teiid_embedded_query of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/teiidEmbeddedQuery.jar"/>
		<delete file="${build.result.folder}/teiidEmbeddedQuerysrc.zip"/>
		<delete file="${plugin.destination}/teiid_embedded_query_6.0.0.jar"/>
		<delete file="${plugin.destination}/teiid_embedded_query_6.0.0.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/home/jverhaeg/workspace/metamatrix/teiid_embedded_query" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: teiid_embedded_query.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}">
				<include name="**/*.bin${logExtension}"/>
			</fileset>
		</delete>
		<zip destfile="${plugin.destination}/teiid_embedded_query_6.0.0.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
