			<pathelement path="lib/xmlsec-1.3.0.jar"/>
			<pathelement path="${build.result.folder}/../teiid_embedded_query_6.0.0/lib/xmlsec-1.3.0.jar"/>
		</path>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/teiidEmbeddedQuery.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bundleBootClasspath}" source="${bundleJavacSource}" target="${bundleJavacTarget}"		>
			<compilerarg line="${compilerArg}" compiler="${build.compiler}"/>
			<classpath refid="teiidEmbeddedQuery.jar.classpath" />
			<src path="src/"			/>
			<compilerarg line="-log '${temp.folder}/teiidEmbeddedQuery.jar.bin${logExtension}'" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"/>
		</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/teiidEmbeddedQuery.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src/">
				<exclude name="**/*.java"/>
				<exclude name="**/package.htm*"/>
			</fileset>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/teiidEmbeddedQuery.jar" basedir="${temp.folder}/teiidEmbeddedQuery.jar.bin"/>
		<delete dir="${temp.folder}/teiidEmbeddedQuery.jar.bin"/>
	</target>

	<target name="teiidEmbeddedQuerysrc.zip" depends="init" unless="teiidEmbeddedQuerysrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<antcall target="zip.teiidEmbeddedQuerysrc.zip"/>
	</target>
	<target name="zip.teiidEmbeddedQuerysrc.zip">
		<zip destfile="${build.result.folder}/teiidEmbeddedQuerysrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</zip>
	</target>
	<target name="copy.teiidEmbeddedQuerysrc.zip">
		<copy todir="${source.destination.folder}/teiidEmbeddedQuerysrc" failonerror="true" overwrite="true">
			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</copy>
	</target>

	<target name="build.jars" depends="init" description="Compile classes and build nested jars for the plug-in: teiid_embedded_query.">
		<available property="teiidEmbeddedQuery.jar" file="${build.result.folder}/teiidEmbeddedQuery.jar"/>
		<antcall target="teiidEmbeddedQuery.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="teiidEmbeddedQuerysrc.zip" file="${build.result.folder}/teiidEmbeddedQuerysrc.zip"/>
		<antcall target="teiidEmbeddedQuerysrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/teiid_embedded_query_6.0.0"/>
		<copy todir="${destination.temp.folder}/teiid_embedded_query_6.0.0" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}">
				<include name="teiidEmbeddedQuery.jar"/>
			</fileset>
		</copy>
		<copy todir="${destination.temp.folder}/teiid_embedded_query_6.0.0" failonerror="true" overwrite="false">
			<fileset dir="${basedir}">
				<include name="teiidEmbeddedQuery.jar"/>
				<include name="plugin.xml"/>
				<include name="plugin.properties"/>
				<include name="META-INF/"/>
				<include name="teiid-0.0.1-SNAPSHOT-embedded.jar"/>
				<include name="lib/axis-1.3.jar"/>
				<include name="lib/axis-jaxrpc-1.2.jar"/>
				<include name="lib/axis-saaj-1.2.jar"/>
